@model ApiCatalogMVC.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Deletar produto";
}

<h2 class="text-danger">Tem certeza que deseja excluir este produto?</h2>
<br />
<form asp-action="DeleteProduct">
    <input type="hidden" asp-for="ProdutoId" />
    <button type="submit" class="btn btn-primary" title="Excluir">
        Excluir
    </button>
    <a asp-action="Index" class="btn btn-danger" title="Voltar">
        Cancelar
    </a>
</form>
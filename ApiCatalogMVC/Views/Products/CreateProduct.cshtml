@model ApiCatalogMVC.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Criar produto";
}

<h2>Criar novo produto</h2>

<form asp-action="CreateProduct">
    <div class="mb-3">
        <label asp-for="Nome" class="form-label">Nome</label>
        <input asp-for="Nome" class="form-control">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Descricao" class="form-label">Descrição</label>
        <input asp-for="Descricao" class="form-control">
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label">Preço</label>
        <input type="number" asp-for="Price" class="form-control">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CategoriaId" class="form-label">Categoria</label>
        <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ImagemUrl" class="form-label">Imagem</label>
        <input asp-for="ImagemUrl" class="form-control">
        <span asp-validation-for="ImagemUrl" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Criar</button>
    <a asp-action="Index" class="btn btn-danger" title="voltar">
        Cancelar
    </a>
</form>

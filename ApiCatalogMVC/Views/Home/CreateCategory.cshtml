@model ApiCatalogMVC.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Create Category";
}

<h2>Criar uma nova categoria</h2>
<hr />
@if (ViewBag.Error != null)
{
    <br />
    <div class="row" style="color: #ff0000;">
        <h4>@ViewBag.Error</h4>
    </div>
    <br />
}
<form asp-action="CreateCategory">
    <div class="mb-3">
        <label asp-for="Nome" class="form-label">Nome</label>
        <input asp-for="Nome" class="form-control">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ImagemUrl" class="form-label">Imagem</label>
        <input asp-for="ImagemUrl" class="form-control">
        <span asp-validation-for="ImagemUrl" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Criar</button>
    <a asp-action="Index" class="btn btn-danger" title="Voltar">
        Cancelar
    </a>
</form>

@model IEnumerable<ApiCatalogMVC.ViewModels.CategoryViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<h2>Categorias</h2>

<hr />
<div class="row">
    <div class="col-md-12">
        <a asp-action="CreateCategory" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i>
            Criar categoria
        </a>
    </div>
</div>
<br />
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagemUrl)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImagemUrl)
                </td>
                <td>
                    <a asp-action="UpdateCategory" asp-route-id="@item.CategoriaId" title="Editar" class="btn btn-primary">
                        <i class="fa-solid fa-pen-to-square"></i>
                    </a>
                    <a asp-action="DeleteCategory" asp-route-id="@item.CategoriaId" title="Remover" class="btn btn-danger">
                            <i class="fa-solid fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>